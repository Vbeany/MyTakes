{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": false,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,

    "paths": {
      "@/*": [
        "./*"
      ],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app.d.ts",
  ]
}
